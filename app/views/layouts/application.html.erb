<!-- header -->
<div id="header">
		<h1 title="Xpert-In - The right advice matters"><a href="/"><span>Xpert-In - The right advice matters</span></a></h1>
		<div id="login">
			<ul>
			<% if logged_in? %>
				<li>Welcome, <strong><%= link_to h(current_user.login.capitalize), user_path(current_user) %></strong></li>
				<li><a href="help.html" title="Help">Help</a></li>
				<li><%= link_to 'Log Out', logout_url %></li>
				<!--dfg	
       [<%= link_to 'Edit Profile', edit_user_path(current_user) %>]
       [<%= link_to 'Change Password', change_password_path %>]
       <%= link_to 'Log Out', logout_url %>
  
     <% end %>
     -->  
			</ul>
		</div>
		<div id="search">
			<form method="get" action="app-search.html">
				<div class="search-form">
					<input type="text" id="site-search" value="" />
					<input type="submit" name="submit" class="search" title="Search" value="" />
				</div>	
			</form>
		</div>
	</div>
<!-- header end -->
