<h2>Listing member</h2>

<% if @members && @members.size > 0 %>
<div id="paginate">
<%= will_paginate @members %>	
</div>
<div id="memberlist" class="roundBox">
<table class="dataList">
  <tr>
    <th>Name</th>
	<th>Date Of Birth</th>
    <th>email</th>
	<th>Contact No.</th>
    <th>Address</th>
	<th>Picture</th>
	<th>Documents</th>
    <th>Modify</th>
  </tr>
<% for member in @members %>
  <tr>
    <td><%=h member.name %></td>
    <td><%=h member.dob %></td>
	<td><%=h member.email %></td>
    <td><%=h member.phone %></td>
	<td><%=h member.address %></td>
  	<td> <% if url_for_file_column(member, "thumbnail") != nil %>
	<%= image_tag url_for_file_column(member, "thumbnail") %>
	<% end %>
	</td>
	<td>
		<% if url_for_file_column(member, "docs") != nil %>
		 	<%= link_to 'Download', url_for_file_column(member, "docs") %>
		<% else %>
			Not Available
		<% end %>
	</td>
    <td><%= link_to 'Show', member %><br/><%= link_to 'Edit', edit_page_path(member) %><br/><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<script type="text/javascript">
Rico.Corner.round('memberlist', {compact: true})
</script>
<% else %>
No members found
<% end %>
